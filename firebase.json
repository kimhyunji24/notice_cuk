{
  "hosting": {
    "site": "cuk-alarm",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 8234
    },
    "firestore": {
      "port": 3241
    },
    "hosting": {
      "port": 1230
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
